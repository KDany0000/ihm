-- Création de la table ENSEIGNANTS
CREATE TABLE ENSEIGNANTS (
    ID_ENSEIGNANT BIGINT PRIMARY KEY,
    NOM_ENSEIGNANT TEXT,
    PRENOM_ENSEIGNANT TEXT,
    ADRESSE_ENSEIGNANT VARCHAR(128),
    NUM_TEL_ENSEIGNANT BIGINT
);

-- Création de la table ELEVE
CREATE TABLE ELEVE (
    ID_ELEVE BIGINT PRIMARY KEY,
    NOM_ELEVE TEXT,
    PRENOM_ELEVE TEXT,
    DATE_DE_NAISSANCE DATE,
    CLASSE CHAR(255),
    ADRESSE CHAR(32)
);

-- Création de la table SERVICE_D_ADMINISTRATION
CREATE TABLE SERVICE_D_ADMINISTRATION (
    ID_SERVICE BIGINT PRIMARY KEY,
    ID_CALENDRIER_SUPPRIMER BIGINT,
    ID_CALENDRIER_MODIFIER BIGINT,
    FOREIGN KEY (ID_CALENDRIER_SUPPRIMER) REFERENCES CALENDRIER(ID_CALENDRIER),
    FOREIGN KEY (ID_CALENDRIER_MODIFIER) REFERENCES CALENDRIER(ID_CALENDRIER)
);

-- Création de la table EVENEMENT
CREATE TABLE EVENEMENT (
    ID_EVENEMENT BIGINT PRIMARY KEY,
    ID_ELEVE BIGINT,
    ID_PRESTATAIRE BIGINT,
    DATE_DEBUT DATE,
    DATE_FIN DATE,
    LIEU TEXT,
    DESCRIPTION TEXT,
    HEURE_DEBUT TIME,
    HEURE_DE_FIN TIME,
    FOREIGN KEY (ID_ELEVE) REFERENCES ELEVE(ID_ELEVE),
    FOREIGN KEY (ID_PRESTATAIRE) REFERENCES ENSEIGNANTS(ID_ENSEIGNANT)
);

-- Création de la table CALENDRIER
CREATE TABLE CALENDRIER (
    ID_CALENDRIER BIGINT PRIMARY KEY,
    SEESION DATE
);

-- Création de la table PARENT
CREATE TABLE PARENT (
    ID_PARENT CHAR(255) PRIMARY KEY,
    ID_ELEVE BIGINT,
    ID_CALENDRIER BIGINT,
    ID_ENSEIGNANT BIGINT,
    NOM_PARENT TEXT,
    PRENOM_PARENT TEXT,
    ADRESSE_PARENT CHAR(255),
    PROFESSION TEXT,
    NUMERO_TELEPHONE BIGINT,
    FOREIGN KEY (ID_ELEVE) REFERENCES ELEVE(ID_ELEVE),
    FOREIGN KEY (ID_CALENDRIER) REFERENCES CALENDRIER(ID_CALENDRIER),
    FOREIGN KEY (ID_ENSEIGNANT) REFERENCES ENSEIGNANTS(ID_ENSEIGNANT)
);
